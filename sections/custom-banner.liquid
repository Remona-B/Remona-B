<div class="custom-banner" style="padding: 60px 20px;">

  <!-- Top Banner Image -->
  {% if section.settings.top_image != blank %}
    <div style="text-align: center; margin-bottom: 40px;">
      <img src="{{ section.settings.top_image | image_url: width: 1200 }}" alt="Top Banner" style="max-width: 100%; height: auto;">
    </div>
  {% endif %}

  <!-- Top Row (Brand / Topline / Button) -->
  <div class="banner-top">
    <div class="brand">{{ section.settings.brand_text }}</div>
    <div class="topline">{{ section.settings.topline_text }}</div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn-animate">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>

  <!-- Main Heading -->
  <h1 class="main-heading">{{ section.settings.heading }}</h1>
  <p class="subheading">{{ section.settings.subheading }}</p>

  <!-- Bottom Button -->
  {% if section.settings.bottom_button_text != blank %}
    <a href="{{ section.settings.bottom_button_link }}" class="btn btn-animate">{{ section.settings.bottom_button_text }}</a>
  {% endif %}

  <!-- Two Column Layout: Left Text + Right Side Banner -->
  <div style="display: flex; align-items: center; justify-content: space-between; gap: 40px; flex-wrap: wrap; margin-top: 50px;">
    
    <!-- Left Text Section -->
    <div style="flex: 1; min-width: 300px; max-width: 600px;">
      {% if section.settings.left_small_text != blank %}
        <p style="font-size: 16px; margin-bottom: 10px; font-weight: 400; color: #555;">
          {{ section.settings.left_small_text }}
        </p>
      {% endif %}

      {% if section.settings.left_heading != blank %}
        <h2 style="font-size: 36px; font-weight: 700; margin-bottom: 20px;">
          {{ section.settings.left_heading }}
        </h2>
      {% endif %}

      {% if section.settings.left_description != blank %}
        <p style="font-size: 18px; margin-bottom: 30px; line-height: 1.6; color: #333;">
          {{ section.settings.left_description }}
        </p>
      {% endif %}

      {% if section.settings.left_button_text != blank and section.settings.left_button_link != blank %}
        <a href="{{ section.settings.left_button_link }}" 
           style="background-color: #fce300; 
                  padding: 12px 30px; 
                  font-size: 16px; 
                  font-weight: 600; 
                  color: #000; 
                  text-decoration: none; 
                  border-radius: 4px;">
          {{ section.settings.left_button_text }}
        </a>
      {% endif %}
    </div>

    <!-- Right Side Image -->
    {% if section.settings.side_image != blank %}
      <div style="flex: 1; text-align: center; min-width: 300px;">
        <img src="{{ section.settings.side_image | image_url: width: 600 }}" alt="Side Banner" style="max-width: 100%; height: auto;">
      </div>
    {% endif %}
    
  </div>

  <!-- Footer Text -->
  <div class="footer-text">{{ section.settings.footer_text }}</div>
</div>


{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "image_picker", "id": "top_image", "label": "Top Banner Image" },
    { "type": "text", "id": "brand_text", "label": "Brand Text", "default": "TISSO VISION" },
    { "type": "text", "id": "topline_text", "label": "Top Line Text", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "button_text", "label": "Top Right Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "button_link", "label": "Top Right Button Link" },
    { "type": "text", "id": "heading", "label": "Main Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "bottom_button_text", "label": "Bottom Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "bottom_button_link", "label": "Bottom Button Link" },
    { "type": "text", "id": "footer_text", "label": "Footer Banner Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" },
    { "type": "text", "id": "left_small_text", "label": "Left Small Text", "default": "Welcome" },
    { "type": "text", "id": "left_heading", "label": "Left Heading", "default": "Discover the Latest Trends" },
    { "type": "textarea", "id": "left_description", "label": "Left Description", "default": "Stay ahead in style with our newest arrivals and exclusive picks designed just for you." },
    { "type": "text", "id": "left_button_text", "label": "Left Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "left_button_link", "label": "Left Button Link" },
    { "type": "image_picker", "id": "side_image", "label": "Right Side Image" }
  ],
  "presets": [{ "name": "Custom Banner" }]
}
{% endschema %}

<div class="custom-banner">

  <!-- Mobile hamburger menu (only visible on small screens) -->
  <div class="hamburger">☰</div>

  <!-- Top bar with brand, tagline, and CTA button -->
  <div class="banner-top">
    <div class="brand"><b>{{ section.settings.brand_text }}</b></div>
    <div class="topline">{{ section.settings.topline_text }}</div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn-animate" id="btn1">{{ section.settings.button_text }} →</a>
    {% endif %}
  </div>

  <!-- Large banner image under the top bar -->
  {% if section.settings.top_image != blank %}
    <div style="text-align: center; margin-bottom: 20px;">
      <img src="{{ section.settings.top_image | image_url: width: 1440 }}" alt="Top Banner" style="max-width: 100%; height: auto;">
    </div>
  {% endif %}

  <!-- Two-column layout (Left = text, Right = image) -->
  <div class="banner-columns">

    <!-- Left column: Heading, Subheading, and CTA button -->
    <div class="banner-left">
      {% if section.settings.heading != blank %}
        <h1 class="main-heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.bottom_button_text != blank %}
        <div class="bottom-btn-wrap">
          <a href="{{ section.settings.bottom_button_link }}" class="btn-animate">{{ section.settings.bottom_button_text }}</a>
        </div>
      {% endif %}
    </div>

    <!-- Right column: Side image -->
    {% if section.settings.side_image != blank %}
      <div class="banner-right">
        <img src="{{ section.settings.side_image | image_url: width: 890 }}" alt="Side Banner">
      </div>
    {% endif %}
  </div>
</div>

<!-- Footer tagline (always at the bottom) -->
<div class="footer-text">{{ section.settings.footer_text }}</div><br>

<style>
/* === Main Banner Wrapper === */
.custom-banner {
  background-size: cover;
  background-position: center;
  padding: 0 20px 40px;
  position: relative;
  padding-bottom: 0px;
}

/* Hidden by default, shown only on mobile */
.hamburger {
  display: none;
}

/* === Top Bar (brand, tagline, button) === */
.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
  background: #F7F7F7;
  width: 100%;
  box-sizing: border-box;
}

.brand {
  font-size: 25px;
  padding: 5px 10px;
  color: black;
}

.topline {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #111;
}

/* === Animated CTA Buttons === */
.btn-animate {
  display: inline-block;
  padding: 10px 40px;
  text-decoration: none;
  position: relative;
  overflow: hidden;
  transition: color 0.4s ease, box-shadow 0.3s ease;
  z-index: 1;
}

/* Background fill effect (grows on hover) */
.btn-animate::before {
  content: "";
  position: absolute;
  top: 0; left: 0;
  height: 100%;
  width: 0;
  z-index: -1;
  transition: width 0.8s ease;
}

/* Top button = Yellow → Black */
#btn1 {
  background: #ffeb3b;
  color: black;
}
#btn1::before { background: #000; }
#btn1:hover { color: white; box-shadow: 0 3px 6px rgba(0,0,0,0.2); }
#btn1:hover::before { width: 100%; }

/* Other buttons = Black → Yellow */
.btn-animate:not(#btn1) {
  background: #000;
  color: white;
}
.btn-animate:not(#btn1)::before { background: #ffeb3b; }
.btn-animate:not(#btn1):hover {
  color: black;
  box-shadow: 0 3px 6px rgba(0,0,0,0.2);
}
.btn-animate:not(#btn1):hover::before { width: 100%; }

/* === Left Column Text === */
.main-heading {
  font-size: 70px; /* fixed missing semicolon */
  margin: 10px 0 10px;
  font-weight: bold;
  text-align: left;
}
.subheading {
  font-size: 16px;
  max-width: 600px;
  margin: 0 0 20px;
  text-align: left;
}

/* Button container */
.bottom-btn-wrap {
  text-align: left;
  margin: 20px 0 40px;
}

/* === Footer text === */
.footer-text {
  margin-top: 3px;
  margin-bottom: 3px;
  padding: 5px;
  font-size: 12px;
  text-align: center;
  color: black;
  background: #F5F5F5;
}

/* === Two-Column Layout (Desktop) === */
.banner-columns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
  flex-wrap: wrap;
  margin-top: 10px;
}
.banner-left {
  flex: 1;
  min-width: 300px;
  max-width: 500px;
  text-align: left;
  margin-left: 50px;
}
.banner-right {
  flex: 1;
  text-align: center;
  min-width: 300px;
}
.banner-right img {
  max-width: 100%;
  height: auto;
}

/* === Mobile Styles === */
@media (max-width: 600px) {
  body { overflow-x: hidden; }

  /* Top bar shrinks + hides tagline + button */
  .banner-top {
    justify-content: center;
    padding: 8px 0;
    background: #F7F7F7;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .brand {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
  }
  .topline, #btn1 { display: none !important; }

  /* Show hamburger instead */
  .hamburger {
    display: block;
    font-size: 22px;
    cursor: pointer;
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 1000;
  }

  /* Hide big top banner image */
  .custom-banner > div img[alt="Top Banner"] { display: none !important; }

  /* Side image takes over */
  .banner-right img {
    width: 130%;
    transform: translateX(-5%);
  }

  /* Headings move above image */
  .banner-columns { display: block; margin: 0; padding: 0; }
  .banner-left { text-align: center; margin: 12px 0; }
  .main-heading { font-size: 24px; margin: 10px 0; text-align: center; }
  .subheading {
    font-size: 14px;
    margin: 0 auto 12px;
    max-width: 90%;
    text-align: center;
    white-space: nowrap; overflow: hidden; text-overflow: ellipsis;
  }

  /* Bottom CTA button overlays image */
  .bottom-btn-wrap {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
  }
  .bottom-btn-wrap .btn-animate {
    background: black;
    color: white;
    padding: 10px 28px;
    font-size: 14px;
  }

  /* Footer */
  .footer-text { font-size: 12px; padding: 6px; }
}
</style>

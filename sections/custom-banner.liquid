{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Banner Image"
    },
    {
      "type": "text",
      "id": "brand_text",
      "label": "Brand Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "topline_text",
      "label": "Top Line Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Right Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Top Right Button Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "bottom_button_text",
      "label": "Bottom Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "bottom_button_link",
      "label": "Bottom Button Link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Banner Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<div class="custom-banner">

  <!-- Top -->
  <div class="banner-top">
    <button class="menu-toggle">☰</button>
    <div class="brand"><b>{{ section.settings.brand_text }}</b></div>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn-animate" id="btn1">{{ section.settings.button_text }}→</a>
    {% endif %}
  </div>

  <!-- Desktop Top Image -->
  {% if section.settings.top_image != blank %}
    <div class="desktop-only" style="text-align:center; margin-bottom:20px;">
      <img src="{{ section.settings.top_image | image_url: width: 1200 }}" alt="Top Banner" style="max-width:100%; height:auto;">
    </div>
  {% endif %}

  <div class="banner-columns">

    <!-- Left Text Section -->
    <div class="banner-left">
      {% if section.settings.heading != blank %}
        <h1 class="main-heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.bottom_button_text != blank %}
        <div class="bottom-btn-wrap desktop-only">
          <a href="{{ section.settings.bottom_button_link }}" class="btn-animate">{{ section.settings.bottom_button_text }}</a>
        </div>
      {% endif %}
    </div>

    <!-- Banner Image -->
    {% if section.settings.side_image != blank %}
      <div class="banner-right">
        <img src="{{ section.settings.side_image | image_url: width: 1200 }}" alt="Banner">
        <div class="bottom-btn-wrap mobile-only">
          <a href="{{ section.settings.bottom_button_link }}" class="btn-animate">{{ section.settings.bottom_button_text }}</a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<!-- Footer -->
<div class="footer-text">{{ section.settings.footer_text }}</div>

<style>
.custom-banner {
  background-size: cover;
  background-position: center;
  max-width: 1400px;
  margin: 0 auto;
}

/* Top row */
.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
}
.brand {
  font-size: 16px;
  border: 1px solid black;
  padding: 5px 10px;
  color: black;
}
.menu-toggle {
  font-size: 22px;
  cursor: pointer;
  border: none;
  background: none;
}
.topline { display:none; }

/* Buttons */
.btn-animate {
  display:inline-block;
  padding:10px 30px;
  text-decoration:none;
  position:relative;
  transition: all 0.3s ease;
}
#btn1 { background:#ffeb3b; color:black; }

/* Headings */
.main-heading {
  font-size:42px;
  font-weight:bold;
  margin:10px 0;
}
.subheading {
  font-size:16px;
  max-width:600px;
  margin:0 0 20px;
  color:#333;
}
.bottom-btn-wrap { margin:20px 0 40px; }

/* Footer */
.footer-text {
  font-size:12px;
  text-align:center;
  padding:5px;
  background:#f5f5f5;
  margin-top:5px;
}

/* Layout */
.banner-columns {
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:40px;
  flex-wrap:wrap;
}
.banner-left { flex:1; min-width:300px; }
.banner-right { flex:1; text-align:center; }

/* Desktop/Mobile toggles */
.desktop-only { display:block; }
.mobile-only { display:none; }

/* Mobile Styles */
@media (max-width: 600px) {
  .brand {
    border:none;
    font-size:18px;
    text-align:center;
    flex:1;
  }
  #btn1 { display:none; }
  .banner-columns { display:block; text-align:center; }
  .main-heading { font-size:22px; }
  .subheading { font-size:14px; margin:0 auto 15px; max-width:90%; }
  .desktop-only { display:none !important; }
  .mobile-only { display:block !important; }

  .banner-right { position:relative; }
  .bottom-btn-wrap.mobile-only {
    position:absolute;
    bottom:15px;
    left:50%;
    transform:translateX(-50%);
  }
  .bottom-btn-wrap .btn-animate {
    background:black;
    color:white;
    padding:10px 24px;
    font-size:14px;
  }
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_text",
      "label": "Brand Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "topline_text",
      "label": "Top Line Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Top Right Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Top Right Button Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "bottom_button_text",
      "label": "Bottom Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "bottom_button_link",
      "label": "Bottom Button Link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Banner Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<div class="custom-banner" style="background-image: url({{ section.settings.background_image | img_url: '2000x' }});">
  <div class="banner-content">
    
    <!-- Top Row -->
    <div class="banner-top">
      <div class="brand">{{ section.settings.brand_text }}</div>
      <div class="topline">{{ section.settings.topline_text }}</div>
      <a href="{{ section.settings.button_link }}" class="btn btn-animate">{{ section.settings.button_text }}</a>
    </div>

    <!-- Main Heading -->
    <h1 class="main-heading">{{ section.settings.heading }}</h1>
    <p class="subheading">{{ section.settings.subheading }}</p>

    <!-- Bottom Button -->
    <a href="{{ section.settings.bottom_button_link }}" class="btn btn-animate">{{ section.settings.bottom_button_text }}</a>

    <!-- Footer Text -->
    <div class="footer-text">{{ section.settings.footer_text }}</div>
  </div>
</div>

<style>
.custom-banner {
  background-size: cover;
  background-position: center;
  padding: 40px;
  text-align: center;
  position: relative;
}

.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  font-weight: bold;
}

.brand {
  font-size: 16px;
  border: 1px solid black;
  padding: 5px 10px;
}

.topline {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #111;
}

.btn-animate {
  display: inline-block;
  background: #ffeb3b;
  padding: 10px 20px;
  font-weight: bold;
  text-decoration: none;
  transition: transform 0.3s ease, background 0.3s ease;
}

.btn-animate:hover {
  background: #000;
  color: #fff;
  transform: scale(1.05);
}

.main-heading {
  font-size: 42px;
  margin: 20px 0 10px;
  font-weight: bold;
}

.subheading {
  font-size: 16px;
  max-width: 600px;
  margin: 0 auto 20px;
}

.footer-text {
  margin-top: 30px;
  font-size: 12px;
  border-top: 1px solid #000;
  display: inline-block;
  padding-top: 5px;
}
</style>
<div class="custom-banner" style="padding: 60px 20px;">

  <!-- Top banner image -->
  {% if section.settings.top_image != blank %}
    <div style="text-align: center; margin-bottom: 40px;">
      <img src="{{ section.settings.top_image | image_url: width: 1200 }}" alt="Top Banner" style="max-width: 100%; height: auto;">
    </div>
  {% endif %}

  <!-- Content with left text + right image -->
  <div style="display: flex; align-items: center; justify-content: space-between; gap: 40px; flex-wrap: wrap;">
    
    <!-- Left Side: Text -->
    <div style="flex: 1; min-width: 300px; max-width: 600px;">
      {% if section.settings.small_text != blank %}
        <p style="font-size: 16px; margin-bottom: 10px; font-weight: 400; color: #555;">
          {{ section.settings.small_text }}
        </p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 style="font-size: 48px; font-weight: 700; margin-bottom: 20px;">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p style="font-size: 18px; margin-bottom: 30px; line-height: 1.6; color: #333;">
          {{ section.settings.description }}
        </p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" 
           style="background-color: #fce300; 
                  padding: 12px 30px; 
                  font-size: 16px; 
                  font-weight: 600; 
                  color: #000; 
                  text-decoration: none; 
                  border-radius: 4px;">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <!-- Right Side: Image -->
    {% if section.settings.side_image != blank %}
      <div style="flex: 1; text-align: center; min-width: 300px;">
        <img src="{{ section.settings.side_image | image_url: width: 600 }}" alt="Side Banner" style="max-width: 100%; height: auto;">
      </div>
    {% endif %}
    
  </div>
</div>


{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Banner Image"
    },
    {
      "type": "text",
      "id": "small_text",
      "label": "Small Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "side_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<style>
.custom-banner {
  background-size: cover;
  background-position: center;
  padding: 40px;
  text-align: center;
  position: relative;
}

.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  font-weight: bold;
}

.brand {
  font-size: 16px;
  border: 1px solid black;
  padding: 5px 10px;
}

.topline {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #111;
}

.btn-animate {
  display: inline-block;
  background: #ffeb3b;
  padding: 10px 20px;
  font-weight: bold;
  text-decoration: none;
  transition: transform 0.3s ease, background 0.3s ease;
}

.btn-animate:hover {
  background: #000;
  color: #fff;
  transform: scale(1.05);
}

.main-heading {
  font-size: 42px;
  margin: 20px 0 10px;
  font-weight: bold;
}

.subheading {
  font-size: 16px;
  max-width: 600px;
  margin: 0 auto 20px;
}

.footer-text {
  margin-top: 30px;
  font-size: 12px;
  border-top: 1px solid #000;
  display: inline-block;
  padding-top: 5px;
}

/* Side banners */
.custom-banner__wrapper {
  display: flex;
  gap: 20px;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin: 40px auto;
  max-width: 1200px;
}

.custom-banner__image {
  flex: 1;
  text-align: center;
}

.custom-banner__image img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.custom-banner__image img:hover {
  transform: scale(1.03);
}
</style>
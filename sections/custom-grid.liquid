{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
     {
      "type": "textarea",
      "id": "grid_text",
      "label": "Grid Heading / Note",
      "default": "Type your custom text here..."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid" }]
}
{% endschema %}

<section class="custom-grid" data-section-id="{{ section.id }}">

  <!-- Editable Text Box -->
  <div class="grid-textbox" style="margin-bottom:20px;">
    <textarea id="grid-heading" 
              style="width:100%; padding:10px; border:1px solid #ccc; font-size:16px;">
    </textarea>
  </div>

  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
          <div class="product-image-wrap">
            <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
            <button class="quick-view" data-handle="{{ product.handle }}">+</button>
          </div>
        </div>
      {% else %}
        <div class="product-card placeholder" {{ block.shopify_attributes }}>
          <div class="placeholder__img" style="aspect-ratio:1/1;background:#f2f2f2;border-radius:10px;"></div>
          <h3>Pick a product</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Product Popup -->
<div id="product-popup" class="popup hidden" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-modal="true">
    <button class="close" aria-label="Close">&times;</button>
    
    <div class="popup-grid">
      <!-- Left: Image -->
      <div class="popup-image-wrap">
        <img id="popup-image" src="" alt="">
      </div>

      <!-- Right: Details -->
      <div class="popup-details">
        <h2 id="popup-title"></h2>
        <p id="popup-description"></p>
        <p id="popup-price"></p>
      </div>
    </div>

    <!-- Full width bottom -->
    <div class="popup-bottom">
      <!-- Options will be injected here -->
      <div id="popup-options"></div>
      <button id="popup-add" class="add-to-cart">ADD TO CART â†’</button>
    </div>
  </div>
</div>



<style>
/* === Grid === */
.custom-grid .grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 2rem;
}
@media (max-width: 900px) { .custom-grid .grid { grid-template-columns: repeat(2, 1fr); } }
@media (max-width: 600px) { .custom-grid .grid { grid-template-columns: 1fr; } }

.product-card {
  position: relative;
  overflow: hidden;
}
.product-image-wrap {
  position: relative;
  width: 100%;
  aspect-ratio: 1/1;
  overflow: hidden;
}
.product-image-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.quick-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: #F8F8F8E5;
  color: black;
  font-size: 14px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, background 0.2s ease;
}

/* === Popup === */
.popup.hidden {
  display: none;
}

.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.popup-content {
  background: #fff;
  padding: 1.5rem;
  max-width: 300px; /* smaller width */
  width: 100%;
  box-shadow: 0 10px 25px rgba(0,0,0,.2);
  position: relative;
}

.close {
  position: absolute;
  top: 10px; right: 15px;
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
}

/* grid layout inside popup */
.popup-grid {
  display: grid;
  grid-template-columns: 100px 1fr; /* tighter layout */
  gap: 1rem;
  align-items: flex-start;
}

/* left side image */

.popup-image-wrap {
  width: 100px;
  aspect-ratio: 1/1;
  overflow: hidden;
}
.popup-image-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* crop image like product grid */
  display: block;
}

/* right side text */
.popup-details h2 {
  margin: 0 0 6px;
  font-size: 18px;
  font-weight: 600;
}
.popup-details p {
  margin: 0 0 8px;
  font-size: 14px;
  color: #555;
}

/* bottom full width */
.popup-bottom {
  margin-top: 1rem;
}
#popup-options label {
  display: block;
  margin: .5rem 0 .25rem;
}
#popup-options select {
  width: 100%;
  padding: .5rem;
  border: 1px solid #ddd;
  border-radius: 6px;
}

.add-to-cart {
  display: block;
  width: 100%;
  padding: 12px;
  margin-top: 5px;
  background: black;
  color: #fff;
  text-align: center;
  border: none;
  font-weight: bold;
  cursor: pointer;
}

</style>

<script src="{{ 'custom-grid.js' | asset_url }}" defer></script>

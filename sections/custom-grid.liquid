{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid" }]
}
{% endschema %}

<section class="custom-grid" data-section-id="{{ section.id }}">
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card" data-handle="{{ product.handle }}" {{ block.shopify_attributes }}>
           <div class="product-image-wrap">
              <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
             <button class="quick-view" data-handle="{{ product.handle }}">+</button>
           </div>
        </div>

      {% else %}
        <div class="product-card placeholder" {{ block.shopify_attributes }}>
          <div class="placeholder__img" style="aspect-ratio:1/1;background:#f2f2f2;border-radius:10px;"></div>
          <h3>Pick a product</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Popup -->
<div id="product-popup" class="popup hidden" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-modal="true">
    <button class="close" aria-label="Close">&times;</button>
    <div id="popup-body"></div>
  </div>
</div>

<style>
  .product-card {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
}

.product-card img {
  width: 100%;
  border-radius: 10px;
  display: block;
}

.product-image-wrap {
  position: relative;
}

.quick-view {
  display: block;
  margin: 0.5rem auto;   /* centers it horizontally */
  width: 36px;           /* small size */
  height: 36px;
  line-height: 36px;
  text-align: center;
  border-radius: 50%;    /* makes it round */
  background: #000;      /* black background */
  color: #fff;           /* white plus sign */
  font-size: 20px;
  font-weight: bold;
  cursor: pointer;
  border: none;
  transition: background 0.2s ease;
}

.quick-view:hover {
  background: #333;       /* slightly lighter on hover */
}


.custom-grid .grid{
  display:grid;
  grid-template-columns:repeat(3,minmax(0,1fr));
  gap:2rem;
}

@media (max-width: 900px){ .custom-grid .grid{ grid-template-columns:repeat(2,minmax(0,1fr)); } }
@media (max-width: 600px){ .custom-grid .grid{ grid-template-columns:1fr; } }

.popup.hidden{  
  display:none;
}

.popup{ 
  position:fixed; 
  inset:0;
  background:rgba(0,0,0,.6);  
  display:flex;
  align-items:center;
  justify-content:center;
}

.popup-content{ 
  background:#fff; 
  padding:2rem;
  max-width:600px; 
  width:100%;
  border-radius:12px; 
  position:relative;
}

.popup .close{ 
  position:absolute;
  top:10px;
  right:15px;
  font-size:1.5rem; 
  background:none;
  border:0;
  cursor:pointer;
}
</style>

<script src="{{ 'custom-grid.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid" }]
}
{% endschema %}

<section class="custom-grid" data-section-id="{{ section.id }}">
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
           <div class="product-image-wrap">
               <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
              <button class="quick-view" data-handle="{{ product.handle }}">+</button>
            </div>
        </div>



      {% else %}
        <div class="product-card placeholder" {{ block.shopify_attributes }}>
          <div class="placeholder__img" style="aspect-ratio:1/1;background:#f2f2f2;border-radius:10px;"></div>
          <h3>Pick a product</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Popup -->
<div id="product-popup" class="popup hidden" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-modal="true">
    <button class="close" aria-label="Close">&times;</button>
    
    <div class="popup-body">
      <div class="popup-left">
        <img id="popup-image" src="" alt="">
      </div>
      <div class="popup-right">
        <h3 id="popup-title"></h3>
        <p id="popup-price"></p>
        <p id="popup-description"></p>

        <!-- Colors -->
        <div class="popup-option">
          <label>Color</label>
          <div id="popup-colors"></div>
        </div>

        <!-- Sizes -->
        <div class="popup-option">
          <label>Size</label>
          <select id="popup-sizes"></select>
        </div>

        <button id="popup-add-to-cart" class="add-to-cart">ADD TO CART â†’</button>
      </div>
    </div>
  </div>
</div>


<style>
  .product-card {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
}

.product-card img {
  width: 100%;
  border-radius: 10px;
  display: block;
}

.product-image-wrap {
  position: relative;
  display: inline-block;
}

.product-image-wrap img {
  display: block;
  width: 100%;
  border-radius: 10px;
}

.quick-view {
  position: absolute;
  top: 50%;               /* center vertically */
  left: 50%;              /* center horizontally */
  transform: translate(-50%, -50%); /* perfect centering */
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #F8F8F8E5; /* dark semi-transparent background */
  color: black;
  font-size: 12px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, background 0.2s ease;
}


.custom-grid .grid{
  display:grid;
  grid-template-columns:repeat(3,minmax(0,1fr));
  gap:2rem;
}

@media (max-width: 900px){ .custom-grid .grid{ grid-template-columns:repeat(2,minmax(0,1fr)); } }
@media (max-width: 600px){ .custom-grid .grid{ grid-template-columns:1fr; } }

.popup.hidden{  
  display:none;
}

.popup-body {
  display: flex;
  gap: 1.5rem;
}

.popup-left img {
  max-width: 150px;
  border-radius: 8px;
}

.popup-right {
  flex: 1;
}

.popup-option {
  margin: 1rem 0;
}

#popup-colors button {
  border: 1px solid #000;
  background: #fff;
  padding: 6px 12px;
  margin-right: 8px;
  cursor: pointer;
}

#popup-sizes {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
}

.add-to-cart {
  display: block;
  width: 100%;
  padding: 12px;
  background: black;
  color: white;
  border: none;
  cursor: pointer;
  font-weight: bold;
  margin-top: 1rem;
}

</style>

<script src="{{ 'custom-grid.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid" }]
}
{% endschema %}

<section class="custom-grid" data-section-id="{{ section.id }}">
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
           <div class="product-image-wrap">
               <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
              <button class="quick-view" data-handle="{{ product.handle }}">+</button>
            </div>
        </div>



      {% else %}
        <div class="product-card placeholder" {{ block.shopify_attributes }}>
          <div class="placeholder__img" style="aspect-ratio:1/1;background:#f2f2f2;border-radius:10px;"></div>
          <h3>Pick a product</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<div id="product-popup" class="popup hidden" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-modal="true">
    <button class="close" aria-label="Close">&times;</button>
    
    <div class="popup-header">
      <img id="popup-image" src="" alt="" style="width:100%; border-radius:8px;">
    </div>
    
    <div class="popup-body">
      <h2 id="popup-title"></h2>
      <p id="popup-price"></p>
      <p id="popup-description" style="font-size:14px; color:#555;"></p>

      <div id="popup-options"></div>

      <button id="popup-add" class="add-to-cart">ADD TO CART â†’</button>
    </div>
  </div>
</div>


<style>
  .product-card {
  position: relative;
  overflow: hidden;
}

.product-card img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* makes image zoom and fill */
  display: block;
}


.product-image-wrap {
  position: relative;
  width: 100%;
  aspect-ratio: 1/1; /* square, adjust if you want 3:4 */
  overflow: hidden;
}


.product-image-wrap img {
  display: block;
  width: 100%;
}

.quick-view {
  position: absolute;
  top: 50%;               /* center vertically */
  left: 50%;              /* center horizontally */
  transform: translate(-50%, -50%); /* perfect centering */
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #F8F8F8E5; /* dark semi-transparent background */
  color: black;
  font-size: 12px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, background 0.2s ease;
}


.custom-grid .grid{
  display:grid;
  grid-template-columns:repeat(3,minmax(0,1fr));
  gap:2rem;
}

@media (max-width: 900px){ .custom-grid .grid{ grid-template-columns:repeat(2,minmax(0,1fr)); } }
@media (max-width: 600px){ .custom-grid .grid{ grid-template-columns:1fr; } }

.popup.hidden{  
  display:none;
}

.popup-content { 
  background:#fff; 
  padding:1.5rem;
  max-width:350px; 
  width:100%; 
  border-radius:12px;
  box-shadow:0 10px 25px rgba(0,0,0,.2);
}

.popup-body h2 { margin:10px 0 5px; font-size:18px; font-weight:600; }
.popup-body p { margin:0 0 10px; }

.add-to-cart {
  display:block;
  width:100%;
  padding:12px;
  margin-top:15px;
  background:black;
  color:#fff;
  text-align:center;
  border:none;
  border-radius:6px;
  font-weight:bold;
  cursor:pointer;
}

</style>

<script src="{{ 'custom-grid.js' | asset_url }}" defer></script>

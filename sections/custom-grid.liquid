{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Select product" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid" }]
}
{% endschema %}

<!-- Load custom font -->
<link href="https://fonts.googleapis.com/css2?family=Lustria&display=swap" rel="stylesheet">

<section class="custom-grid" data-section-id="{{ section.id }}">

  <!-- Section heading -->
  <div class="grid-heading">
    <h2>Tisso vision in the wild</h2>
  </div>

  <!-- Product grid loop -->
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <!-- Product card -->
        <div class="product-card">
          <div class="product-image-wrap">
            <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
            <!-- Quick view button opens popup -->
            <button class="quick-view" data-handle="{{ product.handle }}">+</button>
          </div>
        </div>
      {% else %}
        <!-- Placeholder card (if no product selected) -->
        <div class="product-card placeholder" {{ block.shopify_attributes }}>
          <div class="placeholder__img" style="aspect-ratio:1/1;background:#f2f2f2;border-radius:10px;"></div>
          <h3>Pick a product</h3>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Product Popup -->
<div id="product-popup" class="popup hidden" aria-hidden="true">
  <div class="popup-content" role="dialog" aria-modal="true">
    <!-- Close button -->
    <button class="close" aria-label="Close">&times;</button>
    
    <div class="popup-grid">
      <!-- Left side: product image -->
      <div class="popup-image-wrap">
        <img id="popup-image" src="" alt="">
      </div>

      <!-- Right side: product details -->
      <div class="popup-details">
        <h2 id="popup-title"></h2>
        <p id="popup-description"></p>
        <p id="popup-price"></p>
      </div>
    </div>

    <!-- Bottom area: options + add to cart -->
    <div class="popup-bottom">
      <div id="popup-options"></div>
      <button id="popup-add" class="add-to-cart">ADD TO CART â†’</button>
    </div>
  </div>
</div>


<style>
/* === Section Heading === */
.grid-heading {
  margin-bottom: 20px;
  text-align: left;
}
.grid-heading h2 {
  font-family: 'Lustria', serif;
  font-size: 22px;
  font-weight: normal;
  color: #111;
  margin: 0;
  margin-left:20px;
}

/* === Product Grid === */
.custom-grid .grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 2rem;
  padding: 15px;
}

/* Mobile responsiveness */
@media (max-width: 600px) {
  .custom-grid .grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  .custom-grid {
    padding: 15px;
  }
  .grid-heading {
    margin-bottom: 20px;
    text-align: center;
  }
  .grid-heading h2 {
    font-size: 22px;
    margin: 0;
  }
}

/* === Product Card === */
.product-card {
  position: relative;
  overflow: hidden;
}
.product-image-wrap {
  position: relative;
  width: 100%;
  aspect-ratio: 1/1;
  overflow: hidden;
}
.product-image-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Quick view button (overlay on image) */
.quick-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: #F8F8F8E5;
  color: black;
  font-size: 14px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, background 0.2s ease;
}

/* === Popup Styles === */
.popup.hidden { display: none; }
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.popup-content {
  background: #fff;
  padding: 1.5rem;
  max-width: 300px;
  width: 100%;
  box-shadow: 0 10px 25px rgba(0,0,0,.2);
  position: relative;
}
.close {
  position: absolute;
  top: 10px; right: 15px;
  background: none;
  border: none;
  font-size: 22px;
  cursor: pointer;
}

/* Inside popup layout */
.popup-grid {
  display: grid;
  grid-template-columns: 100px 1fr;
  gap: 1rem;
  align-items: flex-start;
}
.popup-image-wrap {
  width: 100px;
  aspect-ratio: 1/1;
  overflow: hidden;
}
.popup-image-wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.popup-details h2 {
  margin: 0 0 6px;
  font-size: 18px;
}
.popup-details p {
  margin: 0 0 8px;
  font-size: 14px;
  color: #555;
}

/* Bottom part of popup */
.popup-bottom {
  margin-top: 1rem;
}
#popup-options label {
  display: block;
  margin: .5rem 0 .25rem;
}
#popup-options select {
  width: 100%;
  padding: .5rem;
  border: 1px solid #ddd;
  border-radius: 6px;
}
.add-to-cart {
  display: block;
  width: 100%;
  padding: 12px;
  margin-top: 5px;
  background: black;
  color: #fff;
  text-align: center;
  border: none;
  font-weight: bold;
  cursor: pointer;
}

/* === Color Button Styling === */
.color-btn {
  background-color: #f0f0f0;
  color: black;
  padding: 10px 20px;
  border: none;
  margin: 5px 0;
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.3s ease;
  width: 100%;
  text-align: left;
}
.color-btn.selected {
  background-color: black;
  color: white;
  transform: scale(1.05); 
}
</style>

<!-- Custom JS file (handles popup) -->
<script src="{{ 'custom-grid.js' | asset_url }}" defer></script>
